@using NuthinButNet.Helpers

@inherits UmbracoTemplatePage
@{
    Layout = "umbLayout.cshtml";
}
<!-- Main -->
<div class="banner" style="background: url(@Umbraco.Media(Umbraco.Field("headerImage").ToString()).Url) #E5E5E5 no-repeat center; background-size: cover;">
    <div class="container">
        <h1>Parks</h1>
        <div class="bread-bar clearfix">
            <ul class="breadcrumb">
                <li><a href="">Home</a></li>
                <li><a href="@Model.Content.Url">Our Parks</a></li>
            </ul>
        </div>
    </div>
</div><!-- banner ends -->

<div class="container">
    <div class="row">
        @*<div class="span2">
                <h2>Filters</h2>
                <div class="btn-group" data-toggle="buttons">
                    @foreach (var subProgram in @Model.Content.GetAllSubPrograms())
                    {
                        <label class="btn btn-primary">
                            <input type="checkbox" /> @subProgram.GetSubProgramName()
                        </label>
                    }
                </div>
            </div>*@
        @{
            int page;
            if (!int.TryParse(Request.QueryString["page"], out page))
            {
                page = 0;
            }

            int pageSize;
            if (!int.TryParse(Request.QueryString["pageSize"], out pageSize))
            {
                pageSize = 20;
            }
        }
        <div class="span7">
            <div class="events">
                <div class="venues-area">
                    <h2>Our <strong>Parks</strong></h2>
                    <div id="top-venue-navigation">
                        <ul>
                            <li class="previous"><a class="btn" href="#">Prev</a></li>
                            <li class="next"><a class="btn" href="#">Next</a></li>
                        </ul>
                    </div><!-- pagination ends -->

                    <ul class="venues-list">
                        @Umbraco.RenderMacro("Venues", new { parkOnly = true })
                    </ul><!-- venues-list ends -->
                    @*<div class="pagination">
                            <ul>
                                <li class="previous"><a href="#">Prev</a></li>
                                <li><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li class="active"><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li><a href="#">6</a></li>
                                <li><a href="#">...</a></li>
                                <li><a href="#">22</a></li>
                                <li class="next"><a href="#">Next</a></li>
                            </ul>
                        </div><!-- pagination ends -->*@
                </div><!-- venues-area ends -->
            </div><!-- venues end -->
        </div>
        <div class="span4">
            <aside style="background-color: #61b0e4; padding: 40px 10px 40px 10px; height: 100%; text-align: center; ">
                <a href="http://www.chicagoparkdistrict.com/parks/search/" target="_blank">
                    <h3>Keep exploring our parks on the Chicago Park District Website</h3>
                </a>
                <a href="http://www.chicagoparkdistrict.com/parks/search/" target="_blank"><img src="/css/images/park-district.png" alt="Chicago Park District" style="padding-top: 20px;" /></a>
            </aside>
        </div>
    </div>
</div><!-- /container -->
<!-- /Main -->
@section Scripts
{
    <script src="/js/venues.js"></script>
    <script type="text/javascript">
        var page = @page;
        var pageSize = @pageSize;
        var totalVenues = @Model.Content.GetVenues(true).Count();
        jQuery(document).ready(function() {
            var topVenueNav = new FOTP.Venues.Navigation({
                id: 'top-venue-navigation',
                page: page,
                pageSize: pageSize,
                totalVenues: totalVenues
            });
        });
    </script>
}
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "umbLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="span9">
            <div class="blog-box">
                <div class="details">
                    <div class="image">
                        <img src="@Umbraco.TypedMedia(int.Parse(Model.Content.GetPropertyValue<string>("postBanner"))).Url" alt="pic">
                    </div>
                <h4><a href="@umbraco.library.NiceUrl(Model.Content.Id)">@(Model.Content.GetPropertyValue<string>("headline"))</a></h4>
                <ul class="list">
                    <li><span><i class="icon-date"></i>@(Model.Content.GetPropertyValue<DateTime>("date").ToString("MM-dd-yyyy"))</span></li>
                    <li><span><i class="icon-list"></i>Ngo, Annual Funding, People</span></li>
                </ul>
                @Model.Content.GetPropertyValue("bodyText")
                </div> <!-- details -->
            </div> <!-- blog-box -->
        </div><!-- span9 -->
    </div> <!-- row-->
</div><!-- /container -->




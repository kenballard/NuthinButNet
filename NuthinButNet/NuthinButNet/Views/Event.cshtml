@using NuthinButNet.Helpers

@inherits UmbracoTemplatePage
@{
    Layout = "umbLayout.cshtml";
}
<!-- Main -->

<div class="banner" style="background: url(@Umbraco.Media(Umbraco.Field("headerImage").ToString()).Url) #E5E5E5 no-repeat center; background-size: cover;">
    <div class="container">
        <h1>@Model.Content.GetPropertyValue("eventTitle")</h1>
        <div class="bread-bar clearfix">
            <ul class="breadcrumb">
                <li><a href="">Home</a></li>
                <li><a href="@Model.Content.Parent.Url">Our Events</a></li>
                <li><a href="@Model.Content.Url">@Model.Content.GetPropertyValue("eventTitle")</a></li>
            </ul>
        </div>
    </div>
</div><!-- banner ends -->

@{
    var location = @UmbracoContext.GetAddressFromEvent(Model.Content);
}
<div class="container">
    <div class="row">
        <div class="span9">
            <section class="blog-box">
                <div class="details">
                    @if (location != null && !string.IsNullOrWhiteSpace(location.ToString()))
                    {
                        <div class="location-map">
                            <iframe src="@UmbracoContext.GetEventVenueMapUrl(Model.Content)"></iframe>
                        </div><!-- location-map ends -->
                    }
                    <h4>@Model.Content.GetPropertyValue("summary")</h4>
                    <ul class="list">
                        <li><span><i class="icon-date"></i>@Model.Content.GetFormattedEventDate()</span><span>@Model.Content.GetFormattedEventTime()</span></li>
                        @if (location != null && !string.IsNullOrWhiteSpace(location.ToString()))
                        {
                            <li><span><i class="icon-location"></i>@location</span></li>
                        }
                        else
                        {
                            <li><span>&nbsp;</span></li>
                        }
                    </ul>
                    @Model.Content.GetPropertyValue("description")
                </div><!-- details end -->
            </section><!-- blog-box ends -->
        </div>
        <div class="span3">
        </div>
    </div>
</div><!-- /container -->

<!-- /Main -->